# RAGbox Voice Server Configuration
# Copy to .env and fill in values

# ===========================================
# Inworld Runtime (Voice Agent)
# ===========================================

# Base64-encoded API key from Inworld Studio
INWORLD_API_KEY=your-base64-key-here

# ===========================================
# Server
# ===========================================

VOICE_SERVER_PORT=3003
VOICE_SERVER_HOST=0.0.0.0

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# ===========================================
# Database (for tool execution)
# ===========================================

DATABASE_URL=postgresql://user:password@localhost:5432/ragbox

# ===========================================
# WhatsApp Integration
# ===========================================

# Provider: vonage | meta
WHATSAPP_PROVIDER=vonage
WHATSAPP_DEFAULT_USER_ID=

# Vonage
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_APPLICATION_ID=
VONAGE_PRIVATE_KEY_PATH=
VONAGE_WHATSAPP_NUMBER=
VONAGE_SIGNATURE_SECRET=
